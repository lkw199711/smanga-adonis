{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "#type/*": [
        "./app/type/*"
      ],
      "#utils/*": [
        "./app/utils/*"
      ],
      "#if/*": [
        "./app/interfaces/*"
      ],
      "#iii/*": [
        "./app/iii/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "start/**/*.ts",
    "app/type/**/*.ts",
    "contracts/**/*.ts",
    "app/**/*.ts",
    "database/**/*.ts",
    "resources/**/*.ts",
    "ace/**/*.ts",
    "adonis-typings/**/*.ts",
    "app/utils/unzip.cjs"
  ],
  "exclude": [
    "node_modules",
    "build",
    "tmp",
    "test",
    "public",
    "resources",
    "docs",
    "start",
    "ace",
    "adonis-typings",
    "**/*.spec.ts",
  ]
}